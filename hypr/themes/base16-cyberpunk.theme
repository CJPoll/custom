# Btop theme - Cyberpunk Neon
# Author: cjpoll
# Matches Hyprland/Waybar desktop theme with neon cyberpunk aesthetic

# Colors should be in 6 or 2 character hexadecimal or single spaced rgb decimal: "#RRGGBB", "#BW" or "0-255 0-255 0-255"
# example for white: "#ffffff", "#ff" or "255 255 255".

# All graphs and meters can be gradients
# For single color graphs leave "mid" and "end" variable empty.
# Use "start" and "end" variables for two color gradient
# Use "start", "mid" and "end" for three color gradient

# Main background - Deep Dark
theme[main_bg]="#0a0e27"

# Main text color - Soft White
theme[main_fg]="#e0e0ff"

# Title color for boxes - Neon Cyan (brand color)
theme[title]="#00f3ff"

# Highlight color for keyboard shortcuts - Neon Orange
theme[hi_fg]="#ff6b35"

# Background color of selected item in processes box - Dark Purple
theme[selected_bg]="#1a1b3d"

# Foreground color of selected item in processes box - Neon Cyan
theme[selected_fg]="#00f3ff"

# Color of inactive/disabled text - Medium purple-gray
theme[inactive_fg]="#5a5b7d"

# Misc colors for processes box including mini cpu graphs, details memory graph and details status text
# Also affects program name column
theme[proc_misc]="#ff6b35"

# Cpu box outline color - Electric Blue
theme[cpu_box]="#0066ff"

# Memory/disks box outline color - Neon Magenta
theme[mem_box]="#ff00ff"

# Net up/down box outline color - Neon Cyan
theme[net_box]="#00f3ff"

# Processes box outline color - Muted Purple
theme[proc_box]="#bd93f9"

# Box divider line and small boxes line color - Dark Purple
theme[div_line]="#1a1b3d"

# Temperature graph colors - Cool Green -> Orange -> Hot Red
theme[temp_start]="#39ff14"
theme[temp_mid]="#ff6b35"
theme[temp_end]="#ff0066"

# CPU graph colors - Neon Cyan -> Magenta -> Electric Blue
theme[cpu_start]="#00f3ff"
theme[cpu_mid]="#ff00ff"
theme[cpu_end]="#0066ff"

# Mem/Disk free meter - Electric Blue gradient
theme[free_start]="#0066ff"
theme[free_mid]="#00f3ff"
theme[free_end]="#39ff14"

# Mem/Disk cached meter - Cyan to White
theme[cached_start]="#00f3ff"
theme[cached_mid]="#9b9dc7"
theme[cached_end]="#e0e0ff"

# Mem/Disk available meter - Green gradient
theme[available_start]="#39ff14"
theme[available_mid]="#00f3ff"
theme[available_end]="#0066ff"

# Mem/Disk used meter - Magenta -> Red -> Orange (hot colors for usage)
theme[used_start]="#ff00ff"
theme[used_mid]="#ff0066"
theme[used_end]="#ff6b35"

# Download graph colors - Cool Blue/Cyan
theme[download_start]="#0066ff"
theme[download_mid]="#00f3ff"
theme[download_end]="#39ff14"

# Upload graph colors - Warm Green -> Orange
theme[upload_start]="#39ff14"
theme[upload_mid]="#ff6b35"
theme[upload_end]="#ff0066"

# Process box gradient colors - Cyan/Magenta gradient for threads, mem and cpu usage columns
theme[process_start]="#00f3ff"
theme[process_mid]="#ff00ff"
theme[process_end]="#bd93f9"

# Pressure box gradient colors - Blue gradient
theme[pressure_start]="#0066ff"
theme[pressure_mid]="#00f3ff"
theme[pressure_end]="#39ff14"

# Battery meter colors - Green (charged) -> Orange -> Red (low)
theme[battery_start]="#39ff14"
theme[battery_mid]="#ff6b35"
theme[battery_end]="#ff0066"
