# GRUB2 Theme: <%- scheme %>
# Author: <%- author %>
# Cyberpunk neon aesthetic with dark backgrounds and glowing accents
#
# Color Palette:
# - Deep Dark: #<%- base["00"]["hex"] %> (background)
# - Dark Purple: #<%- base["01"]["hex"] %> (containers)
# - Neon Cyan: #<%- base["0D"]["hex"] %> (primary accent, functions)
# - Neon Magenta: #<%- base["0C"]["hex"] %> (secondary accent)
# - Neon Orange: #<%- base["0A"]["hex"] %> (selection highlight)
# - Soft White: #<%- base["05"]["hex"] %> (text)
# - Neon Red: #<%- base["08"]["hex"] %> (errors)
# - Neon Green: #<%- base["09"]["hex"] %> (success)

# Global Properties
title-text: ""
desktop-color: "#<%- base["00"]["hex"] %>"
terminal-font: "Inconsolata Regular 16"
terminal-box: "terminal_box_*.png"
terminal-left: "0"
terminal-top: "0"
terminal-width: "100%"
terminal-height: "100%"
terminal-border: "0"

# Boot Menu
+ boot_menu {
    left = 25%
    top = 30%
    width = 50%
    height = 45%

    item_font = "Inconsolata Regular 18"
    item_color = "#<%- base["05"]["hex"] %>"
    item_height = 36
    item_padding = 12
    item_spacing = 8

    selected_item_font = "Inconsolata Bold 18"
    selected_item_color = "#<%- base["05"]["hex"] %>"

    icon_width = 32
    icon_height = 32
    item_icon_space = 16

    scrollbar = true
    scrollbar_width = 8
    scrollbar_thumb = "scrollbar_thumb_*.png"
    scrollbar_frame = "scrollbar_frame_*.png"

    menu_pixmap_style = "menu_*.png"
    selected_item_pixmap_style = "select_*.png"
}

# Title Label
+ label {
    left = 25%
    top = 18%
    width = 50%
    height = 32

    align = "center"
    id = "__timeout__"
    text = "Boot in %d seconds"
    font = "Inconsolata Regular 14"
    color = "#<%- base["03"]["hex"] %>"
}

# System Info Label
+ label {
    left = 25%
    top = 22%
    width = 50%
    height = 32

    align = "center"
    text = "Gentoo Linux"
    font = "Inconsolata Bold 24"
    color = "#<%- base["0D"]["hex"] %>"
}

# Help Text - Bottom
+ label {
    left = 0
    top = 100%-40
    width = 100%
    height = 32

    align = "center"
    text = "Use arrow keys to navigate, Enter to boot, 'e' to edit"
    font = "Inconsolata Regular 12"
    color = "#<%- base["03"]["hex"] %>"
}

# Progress Bar (for timeout)
+ progress_bar {
    id = "__timeout__"
    left = 35%
    top = 78%
    width = 30%
    height = 8

    fg_color = "#<%- base["0D"]["hex"] %>"
    bg_color = "#<%- base["01"]["hex"] %>"
    border_color = "#<%- base["0B"]["hex"] %>"

    highlight_style = "<%- base["0D"]["hex"] %>"
    highlight_overlay = "progress_highlight_*.png"
    bar_style = "progress_bar_*.png"
}
