# <%- scheme %> Theme for Hyprlock
# Author: <%- author %>

background {
    monitor =
    path = /home/cjpoll/Pictures/cyberpunk-lock.jpg
    blur_passes = 0
    blur_size = 7
}

general {
    no_fade_in = false
    no_fade_out = false
    grace = 0
    hide_cursor = true
    disable_loading_bar = false
}

# TIME DISPLAY
label {
    monitor =
    text = cmd[update:1000] echo "$(date +"%-I:%M")"
    color = rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 1.0)  # Orange
    font_size = 120
    font_family = JetBrains Mono
    position = 0, 280
    halign = center
    valign = center
    shadow_passes = 3
    shadow_size = 5
    shadow_color = rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 0.8)
    shadow_boost = 2.0
}

# DATE DISPLAY
label {
    monitor =
    text = cmd[update:60000] echo "$(date +"%A, %B %d")"
    color = rgba(<%- base["0D"]["rgb"][0] %>, <%- base["0D"]["rgb"][1] %>, <%- base["0D"]["rgb"][2] %>, 0.9)  # Cyan
    font_size = 24
    font_family = JetBrains Mono
    position = 0, 180
    halign = center
    valign = center
    shadow_passes = 2
    shadow_size = 3
    shadow_color = rgba(<%- base["0D"]["rgb"][0] %>, <%- base["0D"]["rgb"][1] %>, <%- base["0D"]["rgb"][2] %>, 0.5)
}

# PASSWORD INPUT FIELD
input-field {
    monitor =
    size = 350, 60
    outline_thickness = 3
    dots_size = 0.25
    dots_spacing = 0.35
    dots_center = true
    dots_rounding = -1
    outer_color = rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 0.8)  # Orange
    inner_color = rgba(<%- base["00"]["rgb"][0] %>, <%- base["00"]["rgb"][1] %>, <%- base["00"]["rgb"][2] %>, 0.6)  # Deep Dark
    font_color = rgba(<%- base["05"]["rgb"][0] %>, <%- base["05"]["rgb"][1] %>, <%- base["05"]["rgb"][2] %>, 1.0)   # Soft White
    fade_on_empty = false
    fade_timeout = 1000
    placeholder_text = <span foreground="##<%- base["0A"]["hex"] %>">Unlock</span>
    hide_input = false
    rounding = 8
    check_color = rgba(<%- base["0C"]["rgb"][0] %>, <%- base["0C"]["rgb"][1] %>, <%- base["0C"]["rgb"][2] %>, 0.8)  # Magenta
    fail_color = rgba(<%- base["08"]["rgb"][0] %>, <%- base["08"]["rgb"][1] %>, <%- base["08"]["rgb"][2] %>, 0.9)   # Red
    fail_text = <span foreground="##<%- base["08"]["hex"] %>">Authentication Failed</span>
    capslock_color = rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 0.8)
    numlock_color = -1
    bothlock_color = -1
    invert_numlock = false
    swap_font_color = false
    position = 0, -100
    halign = center
    valign = center
    shadow_passes = 3
    shadow_size = 5
    shadow_color = rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 0.6)
    shadow_boost = 1.5
}
