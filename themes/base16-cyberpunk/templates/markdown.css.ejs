/* Base16 <%- scheme %> Theme for Markdown Viewer
 * Author: <%- author %>
 * Dark cyberpunk aesthetic with neon accents
 */

body {
  font-family: 'JetBrains Mono', 'Inconsolata', 'Fira Code', monospace;
  line-height: 1.6;
}

/* Headings - Cyan for navigation/hierarchy */
h1, h2, h3, h4, h5, h6 {
  color: #<%- base["0D"]["hex"] %>;
  font-weight: 600;
  margin-top: 24px;
  margin-bottom: 16px;
  line-height: 1.25;
}

h1 { font-size: 2em; border-bottom: 2px solid #<%- base["0D"]["hex"] %>; padding-bottom: 0.3em; }
h2 { font-size: 1.5em; border-bottom: 1px solid #<%- base["0D"]["hex"] %>80; padding-bottom: 0.3em; }
h3 { font-size: 1.25em; }

/* Links */
a {
  color: #<%- base["0B"]["hex"] %>;
  text-decoration: none;
  transition: color 0.2s ease;
}
a:hover {
  color: #<%- base["0A"]["hex"] %>;
  text-shadow: 0 0 8px rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 0.4);
}

/* Inline code */
code:not([class^=language-]):not([class=mermaid]) {
  background: #<%- base["01"]["hex"] %>;
  color: #<%- base["0B"]["hex"] %>;
  border-radius: 3px;
  padding: 2px 6px;
  font-family: 'JetBrains Mono', monospace;
  font-size: 0.9em;
}

/* Keyboard keys */
kbd {
  background: #<%- base["02"]["hex"] %>;
  color: #<%- base["0A"]["hex"] %>;
  border: 1px solid #<%- base["03"]["hex"] %>;
  border-radius: 3px;
  padding: 2px 6px;
  font-family: 'JetBrains Mono', monospace;
  font-size: 0.9em;
}

/* Mark/highlight */
mark {
  background: #<%- base["0A"]["hex"] %>;
  color: #<%- base["00"]["hex"] %>;
  border-radius: 3px;
  padding: 0 4px;
}

/* Tables */
table {
  border-collapse: collapse;
  width: 100%;
  margin: 16px 0;
}
table th {
  color: #<%- base["0D"]["hex"] %>;
  background: #<%- base["01"]["hex"] %>;
  border-bottom: 2px solid #<%- base["0D"]["hex"] %>;
  padding: 8px 12px;
  font-weight: 600;
}
table td {
  color: #<%- base["05"]["hex"] %>;
  border-right: 1px solid #<%- base["03"]["hex"] %>;
  padding: 8px 12px;
}
table tr td:last-of-type {
  border-right: none;
}
table tr:nth-child(even) td {
  background: #<%- base["01"]["hex"] %>80;
}
table tr:hover td {
  background: #<%- base["02"]["hex"] %>;
}

/* Blockquotes */
blockquote {
  background: #<%- base["01"]["hex"] %>;
  border-left: 4px solid #<%- base["0E"]["hex"] %>;
  color: #<%- base["04"]["hex"] %>;
  padding: 8px 16px;
  margin: 16px 0;
  border-radius: 0 4px 4px 0;
}

/* Horizontal rule */
hr {
  border: none;
  border-top: 2px solid #<%- base["03"]["hex"] %>;
  margin: 24px 0;
}

/* Lists */
ul, ol {
  padding-left: 2em;
}
li {
  margin: 4px 0;
}

/* Task lists */
input[type="checkbox"] {
  accent-color: #<%- base["09"]["hex"] %>;
}

/* Strong/bold */
strong {
  color: #<%- base["0A"]["hex"] %>;
  font-weight: 600;
}

/* Emphasis/italic */
em {
  color: #<%- base["0E"]["hex"] %>;
  font-style: italic;
}

/* Strikethrough */
del {
  color: #<%- base["08"]["hex"] %>;
  text-decoration: line-through;
}

/* Code blocks */
pre {
  background: #<%- base["00"]["hex"] %>;
  border: 1px solid #<%- base["02"]["hex"] %>;
  border-radius: 6px;
  padding: 16px;
  margin: 16px 0;
  overflow-x: auto;
}
pre code {
  background: none;
  color: #<%- base["05"]["hex"] %>;
  padding: 0;
}

/* Prism syntax highlighting */
[class^=language-] .token.comment,
[class^=language-] .token.prolog,
[class^=language-] .token.doctype,
[class^=language-] .token.cdata {
  color: #<%- base["03"]["hex"] %>;
  font-style: italic;
}

[class^=language-] .token.punctuation {
  color: #<%- base["0F"]["hex"] %>;
}

[class^=language-] .token.property,
[class^=language-] .token.tag,
[class^=language-] .token.boolean,
[class^=language-] .token.number,
[class^=language-] .token.constant,
[class^=language-] .token.symbol {
  color: #<%- base["0C"]["hex"] %>;
}

[class^=language-] .token.selector,
[class^=language-] .token.attr-name,
[class^=language-] .token.string,
[class^=language-] .token.char,
[class^=language-] .token.builtin {
  color: #<%- base["0B"]["hex"] %>;
}

[class^=language-] .token.operator,
[class^=language-] .token.entity,
[class^=language-] .token.url,
.language-css .token.string,
.style .token.string {
  color: #<%- base["05"]["hex"] %>;
}

[class^=language-] .token.atrule,
[class^=language-] .token.attr-value,
[class^=language-] .token.keyword {
  color: #<%- base["0E"]["hex"] %>;
}

[class^=language-] .token.function,
[class^=language-] .token.function-variable {
  color: #<%- base["0D"]["hex"] %>;
}

[class^=language-] .token.class-name {
  color: #<%- base["0A"]["hex"] %>;
}

[class^=language-] .token.regex,
[class^=language-] .token.important,
[class^=language-] .token.variable {
  color: #<%- base["09"]["hex"] %>;
}

[class^=language-] .token.parameter {
  color: #<%- base["0A"]["hex"] %>;
}

[class^=language-] .token.literal-property {
  color: #<%- base["0C"]["hex"] %>;
}

/* Dark mode (default) */
@media (prefers-color-scheme: dark) {
  body {
    background: #<%- base["00"]["hex"] %>;
    color: #<%- base["05"]["hex"] %>;
  }
}

/* Light mode override - maintain cyberpunk aesthetic with adjusted contrast */
@media (prefers-color-scheme: light) {
  body {
    background: #<%- base["07"]["hex"] %>;
    color: #<%- base["01"]["hex"] %>;
  }

  h1, h2, h3, h4, h5, h6 {
    color: #<%- base["0B"]["hex"] %>;
  }

  h1 { border-bottom-color: #<%- base["0B"]["hex"] %>; }
  h2 { border-bottom-color: #<%- base["0B"]["hex"] %>80; }

  a {
    color: #<%- base["0B"]["hex"] %>;
  }
  a:hover {
    color: #<%- base["0A"]["hex"] %>;
  }

  code:not([class^=language-]):not([class=mermaid]) {
    background: #<%- base["06"]["hex"] %>;
    color: #<%- base["0B"]["hex"] %>;
  }

  kbd {
    background: #<%- base["06"]["hex"] %>;
    color: #<%- base["0A"]["hex"] %>;
    border-color: #<%- base["04"]["hex"] %>;
  }

  mark {
    background: #<%- base["0A"]["hex"] %>;
    color: #ffffff;
  }

  table th {
    color: #<%- base["0B"]["hex"] %>;
    background: #<%- base["06"]["hex"] %>;
    border-bottom-color: #<%- base["0B"]["hex"] %>;
  }

  table td {
    color: #<%- base["01"]["hex"] %>;
    border-right-color: #<%- base["04"]["hex"] %>;
  }

  table tr:nth-child(even) td {
    background: #<%- base["06"]["hex"] %>80;
  }

  table tr:hover td {
    background: #<%- base["05"]["hex"] %>;
  }

  blockquote {
    background: #<%- base["06"]["hex"] %>;
    border-left-color: #<%- base["0E"]["hex"] %>;
    color: #<%- base["03"]["hex"] %>;
  }

  hr {
    border-top-color: #<%- base["04"]["hex"] %>;
  }

  pre {
    background: #<%- base["06"]["hex"] %>;
    border-color: #<%- base["04"]["hex"] %>;
  }

  pre code {
    color: #<%- base["01"]["hex"] %>;
  }
}
