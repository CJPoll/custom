# Btop theme - <%- scheme %>
# Author: <%- author %>
# Base16 color scheme

# Colors should be in 6 or 2 character hexadecimal or single spaced rgb decimal: "#RRGGBB", "#BW" or "0-255 0-255 0-255"
# example for white: "#ffffff", "#ff" or "255 255 255".

# All graphs and meters can be gradients
# For single color graphs leave "mid" and "end" variable empty.
# Use "start" and "end" variables for two color gradient
# Use "start", "mid" and "end" for three color gradient

# Main background
theme[main_bg]="#<%- base["00"]["hex"] %>"

# Main text color
theme[main_fg]="#<%- base["05"]["hex"] %>"

# Title color for boxes
theme[title]="#<%- base["0D"]["hex"] %>"

# Highlight color for keyboard shortcuts
theme[hi_fg]="#<%- base["0A"]["hex"] %>"

# Background color of selected item in processes box
theme[selected_bg]="#<%- base["01"]["hex"] %>"

# Foreground color of selected item in processes box
theme[selected_fg]="#<%- base["0D"]["hex"] %>"

# Color of inactive/disabled text
theme[inactive_fg]="#<%- base["03"]["hex"] %>"

# Misc colors for processes box including mini cpu graphs, details memory graph and details status text
theme[proc_misc]="#<%- base["0A"]["hex"] %>"

# Cpu box outline color
theme[cpu_box]="#<%- base["0B"]["hex"] %>"

# Memory/disks box outline color
theme[mem_box]="#<%- base["0C"]["hex"] %>"

# Net up/down box outline color
theme[net_box]="#<%- base["0D"]["hex"] %>"

# Processes box outline color
theme[proc_box]="#<%- base["0E"]["hex"] %>"

# Box divider line and small boxes line color
theme[div_line]="#<%- base["01"]["hex"] %>"

# Temperature graph colors - Cool Green -> Orange -> Hot Red
theme[temp_start]="#<%- base["09"]["hex"] %>"
theme[temp_mid]="#<%- base["0A"]["hex"] %>"
theme[temp_end]="#<%- base["08"]["hex"] %>"

# CPU graph colors - Cyan -> Magenta -> Blue
theme[cpu_start]="#<%- base["0D"]["hex"] %>"
theme[cpu_mid]="#<%- base["0C"]["hex"] %>"
theme[cpu_end]="#<%- base["0B"]["hex"] %>"

# Mem/Disk free meter - Blue gradient
theme[free_start]="#<%- base["0B"]["hex"] %>"
theme[free_mid]="#<%- base["0D"]["hex"] %>"
theme[free_end]="#<%- base["09"]["hex"] %>"

# Mem/Disk cached meter - Cyan to White
theme[cached_start]="#<%- base["0D"]["hex"] %>"
theme[cached_mid]="#<%- base["04"]["hex"] %>"
theme[cached_end]="#<%- base["05"]["hex"] %>"

# Mem/Disk available meter - Green gradient
theme[available_start]="#<%- base["09"]["hex"] %>"
theme[available_mid]="#<%- base["0D"]["hex"] %>"
theme[available_end]="#<%- base["0B"]["hex"] %>"

# Mem/Disk used meter - Magenta -> Red -> Orange (hot colors for usage)
theme[used_start]="#<%- base["0C"]["hex"] %>"
theme[used_mid]="#<%- base["08"]["hex"] %>"
theme[used_end]="#<%- base["0A"]["hex"] %>"

# Download graph colors - Cool Blue/Cyan
theme[download_start]="#<%- base["0B"]["hex"] %>"
theme[download_mid]="#<%- base["0D"]["hex"] %>"
theme[download_end]="#<%- base["09"]["hex"] %>"

# Upload graph colors - Warm Green -> Orange
theme[upload_start]="#<%- base["09"]["hex"] %>"
theme[upload_mid]="#<%- base["0A"]["hex"] %>"
theme[upload_end]="#<%- base["08"]["hex"] %>"

# Process box gradient colors - Cyan/Magenta gradient
theme[process_start]="#<%- base["0D"]["hex"] %>"
theme[process_mid]="#<%- base["0C"]["hex"] %>"
theme[process_end]="#<%- base["0E"]["hex"] %>"

# Pressure box gradient colors - Blue gradient
theme[pressure_start]="#<%- base["0B"]["hex"] %>"
theme[pressure_mid]="#<%- base["0D"]["hex"] %>"
theme[pressure_end]="#<%- base["09"]["hex"] %>"

# Battery meter colors - Green (charged) -> Orange -> Red (low)
theme[battery_start]="#<%- base["09"]["hex"] %>"
theme[battery_mid]="#<%- base["0A"]["hex"] %>"
theme[battery_end]="#<%- base["08"]["hex"] %>"
