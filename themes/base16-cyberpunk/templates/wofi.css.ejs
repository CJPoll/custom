/*
 * <%- scheme %> Theme for Wofi
 * Author: <%- author %>
 * Dark theme with neon accents and generous padding
 *
 * Color Palette:
 * - Deep Dark: #<%- base["00"]["hex"] %> (background)
 * - Dark Purple: #<%- base["01"]["hex"] %> (containers)
 * - Neon Cyan: #<%- base["0D"]["hex"] %> (primary accent)
 * - Neon Magenta: #<%- base["0C"]["hex"] %> (secondary accent)
 * - Electric Blue: #<%- base["0B"]["hex"] %> (highlights)
 * - Soft White: #<%- base["05"]["hex"] %> (text)
 */

/*
 * SELECTORS
 *
 * window
 * CSS Selector for the entire wofi window
 *
 * outer-box (#outer-box)
 * Selector for a box that everything else sits inside of
 *
 * input (#input)
 * Selector for the text box for filtering items
 *
 * scroll (#scroll)
 * Selector for the scroll window containing inner-box
 *
 * inner-box (#inner-box)
 * Selector for the box containing all entries
 *
 * entry (#entry)
 * Selector for the box containing text and if present, images
 *
 * text (#text)
 * Selector for the box containing the name of the program/option inserted
 *
 * img (#img)
 * Selector for images displayed in entries
*/

/* Main window */
window {
    margin: 0px;
    background-color: transparent;
    font-family: "JetBrains Mono", "Fira Code", monospace;
    font-size: 18px;
}

/* Outer container */
#outer-box {
    margin: 8px;
    padding: 24px;
    background-color: #<%- base["00"]["hex"] %>;
    border: 1px solid #<%- base["0D"]["hex"] %>;
    border-radius: 12px;
    box-shadow: 0 0 20px rgba(<%- base["0D"]["rgb"][0] %>, <%- base["0D"]["rgb"][1] %>, <%- base["0D"]["rgb"][2] %>, 0.3),
                inset 0 0 30px rgba(<%- base["0B"]["rgb"][0] %>, <%- base["0B"]["rgb"][1] %>, <%- base["0B"]["rgb"][2] %>, 0.05);
}

/* Search input */
#input {
    margin: 0px 0px 20px 0px;
    padding: 20px 24px;
    background-color: #<%- base["01"]["hex"] %>;
    color: #<%- base["05"]["hex"] %>;
    border: 2px solid #<%- base["0B"]["hex"] %>;
    border-radius: 8px;
    outline: none;
    caret-color: #<%- base["0D"]["hex"] %>;
    box-shadow: 0 0 10px rgba(<%- base["0B"]["rgb"][0] %>, <%- base["0B"]["rgb"][1] %>, <%- base["0B"]["rgb"][2] %>, 0.2);
}

#input:focus {
    border-color: #<%- base["0B"]["hex"] %>;
    box-shadow: 0 0 15px rgba(<%- base["0B"]["rgb"][0] %>, <%- base["0B"]["rgb"][1] %>, <%- base["0B"]["rgb"][2] %>, 0.4);
}

/* Scroll container */
#scroll {
    margin: 0px;
    padding: 0px;
}

/* Inner box containing entries */
#inner-box {
    margin: 0px;
    padding: 16px;
    background-color: transparent;
}

/* Individual entry */
#entry {
    padding: 16px 20px;
    margin: 4px 0px;
    background-color: #<%- base["01"]["hex"] %>;
    border: 1px solid transparent;
    border-radius: 6px;
    transition: all 0.2s ease;
}

#entry:hover {
    background-color: #<%- base["02"]["hex"] %>;
    border-color: #<%- base["0A"]["hex"] %>;
    box-shadow: 0 0 12px rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 0.2);
}

#entry:selected {
    background: linear-gradient(135deg, #<%- base["01"]["hex"] %> 0%, #<%- base["02"]["hex"] %> 100%);
    border-color: #<%- base["0A"]["hex"] %>;
    box-shadow: 0 0 15px rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 0.3),
                inset 0 0 10px rgba(<%- base["0A"]["rgb"][0] %>, <%- base["0A"]["rgb"][1] %>, <%- base["0A"]["rgb"][2] %>, 0.1);
}

/* Entry text */
#text {
    padding: 2px 8px;
    color: #<%- base["05"]["hex"] %>;
    font-weight: 500;
}

#entry:selected #text {
    color: #<%- base["05"]["hex"] %>;
    text-shadow: 0 0 8px rgba(<%- base["05"]["rgb"][0] %>, <%- base["05"]["rgb"][1] %>, <%- base["05"]["rgb"][2] %>, 0.5);
}

/* Entry images */
#img {
    margin-right: 12px;
    padding: 8px;
    border-radius: 4px;
    background-color: transparent;
}
